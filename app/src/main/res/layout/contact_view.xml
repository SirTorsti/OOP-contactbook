<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCC4C4"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ProfilePicView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/profile" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ContactNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nimi"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ContactNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="puh nro" />

        <TextView
            android:id="@+id/ContactGroupText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ryhmÃ¤" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ContactDetailsButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/info_image" />

    <ImageView
        android:id="@+id/ContactDeleteButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/delete_image" />
</androidx.appcompat.widget.LinearLayoutCompat>